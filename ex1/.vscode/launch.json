    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'ex1'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=ex1",
                    "--package=ex1"
                ],
                "filter": {
                    "name": "ex1",
                    "kind": "bin"
                }
            },
            "args": [
                "abc.txt",
                "target.txt"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
    ]
}